<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E20"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/picture1"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arizonia"
                android:gravity="left"
                android:text="هندسة شبرا"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Benha Universty"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/profile_but"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/baseline_account_box_24"
            android:background="#1D1C40" />

        <ImageButton
            android:id="@+id/logout_but"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_logout_24"
            android:background="#1D1C40" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-140dp"
        android:elevation="20dp"
        android:text="Select the Floor"
        android:textAlignment="center"
        android:textColor="#BFBFBF"
        android:textSize="36dp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:columnCount="2"
        android:rowCount="2">

        <ImageView
            android:id="@+id/f1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/f1"
            app:cardElevation="12dp" />

        <ImageView
            android:id="@+id/f2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/f2"
            app:cardElevation="12dp" />

        <ImageView
            android:id="@+id/f3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/f3"
            app:cardElevation="12dp" />

        <ImageView
            android:id="@+id/f4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/f4"
            app:cardElevation="12dp" />
    </GridLayout>

</LinearLayout>